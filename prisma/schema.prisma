generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Agency {
  HOLOLIVE
  INDEPENDENT
  NIJISANJI
}

enum Region {
  CN // China
  EN // English-speaking regions
  ID // Indonesia
  IN // India
  JP // Japan
  KR // Korea
}

enum Status {
  ACTIVE
  GRADUATED
}

enum Language {
  EN // English
  JA // Japanese
  KO // Korean
  ZH // Chinese
}

model Streamer {
  id             String         @id @default(uuid())
  name           StreamerName[]
  agency         Agency
  region         Region
  status         Status
  anniv_birthday DateTime // Sort by default? Looks like it can't do that it relies on ORDER BY. Can DateTime field be ordered? Otheriwes, I'll need to use Int
  anniv_debut    DateTime // Sort by default? Looks like it can't do that it relies on ORDER BY. Can DateTime field be ordered? Otheriwes, I'll need to use Int
  links          String
}

model StreamerName {
  id         String   @id @default(uuid())
  name       String
  language   Language
  streamer   Streamer @relation(fields: [streamerId], references: [id])
  streamerId String
}
